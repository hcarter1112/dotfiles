# Set borders
# set drawbox
set preview false
set previewer ~/go/bin/pistol
set hidden!
set sortby natural
set info size
set dircounts
set scrolloff 5
set ignorecase true
set icons true

cmd open $xdg-open "$f"
# Trash-cli command
cmd sudo-trash $sudo trash-put -r $fx
cmd trash $trash-put -r $fx
# Make directory cmd
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}
# Make file cmd
cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}
# unzip anything cmd
cmd unzip ${{
  case "$f" in
    *.zip) unzip "$f" ;;
    *.tar.gz) tar -xzvf "$f" ;;
    *.tar.bz2) tar -xjvf "$f" ;;
    *.tar) tar -xvf "$f" ;;
    *) echo "unsupported format" ;;
  esac
}}

map g
map m

map DD sudo-trash
map Dd trash
map Tl %trash-list
map Tr %trash-restore
map mM mark-save
map mm mark-load
map mr mark-remove
map mf mkfile
map md mkdir
map R reload

map gd cd ~/Documents/
map gD cd ~/Downloads/
map gc cd ~/.config/
map gs cd ~/.gitstuff/
map gh cd ~/Documents/rclone/HmT-Mats/
map gb cd /usr/share/backgrounds/
map gT cd ~/.local/share/Trash/files/
map ~ cd ~/

